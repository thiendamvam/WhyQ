<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTheme" parent="@android:style/Theme">
        <item name="android:tabWidgetStyle">@style/CustomTabWidget</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomTabWidget" parent="@android:style/Widget.TabWidget">
        <item name="android:textAppearance">@style/CustomTabWidgetText</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="label">
        <item name="android:textSize">@dimen/font_title</item>
        <item name="android:textColor">#1C1C1C</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="edit_text">
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="view_text">
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="text_secondary">
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textColor">@android:color/secondary_text_dark_nodisable</item>
    </style>

    <style name="text_title">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
     <style name="text_large">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>
    
     <style name="text_medium">
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>
    
     <style name="text_small">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">#5c5c5c</item>
    </style>

    <style name="listview_text">
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textColor">#2a62a0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listview_button">
        <item name="android:textSize">@dimen/base_font</item>
        <item name="android:textColor">#1595d1</item>
        <item name="android:background">@drawable/btn_base</item>
    </style>

    <style name="next_button_normal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/next_normal</item>
    </style>

    <style name="next_button_pressed">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/next_pressed</item>
    </style>

    <style name="previous_button_normal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/prev_normal</item>
    </style>

    <style name="previous_button_pressed">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/prev_pressed</item>
    </style>

    <style name="button_style_selected">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/button_bg_new_selected</item>
    </style>

    <style name="button_style_normal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/button_bg_new</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggle_style" parent="@android:Theme.Black">

        <!-- Tell Android to use a custom style when creating a ToggleButton -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <!-- Perhaps more theme items here...? -->
    </style>

    <style name="normail_text">
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>