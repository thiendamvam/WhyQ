<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <include layout="@layout/navigation_basic" >
        </include>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:weightSum="3" >

        <LinearLayout
            android:id="@+id/btnMenuGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp" >

            <Button
                android:id="@+id/btnHomeDelivery"
                style="@style/normail_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_delivery"
                android:text="Home delivery" />

            <Button
                android:id="@+id/btnHomeTakeAway"
                style="@style/normail_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/btn_delivery"
                android:text="Take away" />

            <Button
                android:id="@+id/btnHotelRoomDelivery"
                style="@style/normail_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/btn_delivery"
                android:text="Hotel room delivery" />

            <Button
                android:id="@+id/btnDineIn"
                style="@style/normail_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/btn_delivery"
                android:text="Dine in" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/btnCancel"
            android:background="@color/normal_delivery_color" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/normail_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/transparent"
            android:text="Cencel"
            android:textColor="@color/profifle_blue" />
    </RelativeLayout>

</LinearLayout>