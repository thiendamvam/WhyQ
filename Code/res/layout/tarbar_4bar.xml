<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="0dp"
    android:weightSum="4" >

    <LinearLayout
        android:id="@+id/lnCutleryTab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_tab_left_active"
        android:gravity="center"
        android:onClick="onCutleryTabCliked"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imgCutleryIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tab_cutlery_active" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnWineTab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_tab_middle_normal"
        android:gravity="center"
        android:onClick="onWineTabCliked"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imgWinIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tab_wine_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnCoffeTab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_tab_middle_normal"
        android:baselineAligned="false"
        android:gravity="center"
        android:onClick="onCoffeTabClicked"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imgCoffeeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tab_coffee_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnHotel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_tab_middle_normal"
        android:baselineAligned="false"
        android:gravity="center"
        android:onClick="onHotelTabClicked"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:id="@+id/imgHotelIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_tab_hotel_normal" />
    </LinearLayout>

</LinearLayout>