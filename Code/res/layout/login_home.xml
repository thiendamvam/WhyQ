<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="40dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_whyq" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="5.8" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/button"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedSignup"
            android:text="Sign Up"
            android:textColor="#818181" >
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_btn_login"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedLogin"
            android:text="Sign In"
            android:textColor="#818181" >
        </Button>

        <Button
            android:id="@+id/btnFbLogin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_btn_login_fb"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedLoginFB"
            android:text="Login with Facebook"
            android:textColor="#fefefe" >
        </Button>

        <Button
            android:id="@+id/btnLoginTw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_btn_login_tw"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedLoginTW"
            android:text="Login with Twitter"
            android:textColor="#fefefe" >
        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.4"
            android:background="@android:color/transparent"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedSkipLogin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Skip signin and use as guest"
                android:textColor="#f5f5f5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>